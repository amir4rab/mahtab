---
interface Props {
  title: string;
  className?: string;
  textSection?: boolean;
}

const { title, className = "py-6", textSection = false } = Astro.props;

---
<section class={ className + textSection ? ' [&>p]:font-light [&>p]:text-lg md:[&>p]:text-3xl md:[&>p]:font-base' : '' }>
  <h2 class="my-1 text-4xl md:text-lg md:opacity-80">{ title }</h2>
  <slot />
</section>