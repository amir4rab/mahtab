---
import CommonHeaders from '@/components/astro/common-headers.astro';
import Navbar from '@/components/astro/navbar.astro';
---
<html lang="en" dir="ltr">
  <CommonHeaders />
  <style is:global>
    *,
    *::after,
    *::before {
      -webkit-tap-highlight-color: transparent;
    }

    *:focus-visible {
      @apply accent-primary-500/60 dark:accent-primary-300/60 outline-primary-500/60 dark:outline-primary-300/60;
    }

    body {
      @apply bg-primary-50 text-black dark:bg-neutral-950 dark:text-white;
    }

    @media (prefers-color-scheme: dark) {
      :root {
        color-scheme: dark;
      }
    }
    @media (prefers-color-scheme: light) {
      :root {
        color-scheme: light;
      }
    }

    html[data-modal-open="true"] * {
      touch-action: none;
    }
    html[data-modal-open="true"]
      [data-dialog-open="true"]
      [data-scrollable="true"]
      * {
      touch-action: auto;
    }

    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      @apply appearance-none m-0;
    }
  </style>
  <body>
    <slot name="before-nav" />
    <Navbar />
    <main class="prose dark:prose-invert px-8 py-12 md:px-0 md:py-12 md:max-w-4xl md:mx-auto h-[300vh]">
      <slot />
    </main>
  </body>
</html>